	</servlet>

	<servlet-mapping>
		<servlet-name>QualityPageServlet</servlet-name>
		<url-pattern>/quality.html</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>AuditServlet</servlet-name>
		<servlet-class>gov.alaska.dggs.igneous.api.AuditServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>AuditServlet</servlet-name>
