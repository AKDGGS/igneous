		<servlet-class>gov.alaska.dggs.igneous.AuditReportPageServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>AuditReportPageServlet</servlet-name>
		<url-pattern>/audit.html</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>HelpPageServlet</servlet-name>
		<servlet-class>gov.alaska.dggs.igneous.HelpPageServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>HelpPageServlet</servlet-name>
		<url-pattern>/help</url-pattern>
	</servlet-mapping>

	<listener>
		<listener-class>gov.alaska.dggs.igneous.IgneousFactory</listener-class>
	</listener>

	<resource-ref>
		<description>Local datasource</description>
		<res-ref-name>jdbc/igneous</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
</web-app>
