<?xml version="1.0" encoding="UTF-8"?>

<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

	<display-name>igneous</display-name>

	<welcome-file-list>
		<welcome-file>search</welcome-file>
	</welcome-file-list>

	<context-param>
		<description>
			Development mode - if enabled uncompiled scripts/css are used
			and more debugging information is present
		</description>
		<param-name>dev_mode</param-name>
		<param-value>true</param-value>
	</context-param>

	<context-param>
		<description>Sphinx host/IP</description>
		<param-name>sphinx_host</param-name>
		<param-value>127.0.0.1</param-value>
	</context-param>

	<context-param>
		<description>Sphinx port</description>
		<param-name>sphinx_port</param-name>
		<param-value>9312</param-value>
	</context-param>

	<context-param>
		<description>Sphinx max matches</description>
		<param-name>sphinx_max_matches</param-name>
		<param-value>7500</param-value>
	</context-param>

	<servlet>
		<servlet-name>SearchPageServlet</servlet-name>
		<servlet-class>gov.alaska.dggs.igneous.SearchPageServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>SearchPageServlet</servlet-name>
		<url-pattern>/search</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>BoreholeViewPageServlet</servlet-name>
		<servlet-class>gov.alaska.dggs.igneous.BoreholeViewPageServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>BoreholeViewPageServlet</servlet-name>
		<url-pattern>/borehole/*</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>ProspectViewPageServlet</servlet-name>
		<servlet-class>gov.alaska.dggs.igneous.ProspectViewPageServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>ProspectViewPageServlet</servlet-name>
		<url-pattern>/prospect/*</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>WellViewPageServlet</servlet-name>
		<servlet-class>gov.alaska.dggs.igneous.WellViewPageServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>WellViewPageServlet</servlet-name>
		<url-pattern>/well/*</url-pattern>
	</servlet-mapping>

	<servlet>
