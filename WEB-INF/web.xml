<?xml version="1.0" encoding="UTF-8"?>

<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

	<display-name>igneous</display-name>

	<welcome-file-list>
		<welcome-file>search</welcome-file>
	</welcome-file-list>

	<context-param>
		<description>
			Development mode - if enabled uncompiled scripts/css are used
			and more debugging information is present
		</description>
		<param-name>dev_mode</param-name>
		<param-value>true</param-value>
	</context-param>

	<context-param>
		<description>Sphinx host/IP</description>
		<param-name>sphinx_host</param-name>
		<param-value>localhost</param-value>
	</context-param>

	<context-param>
		<description>Sphinx port</description>
		<param-name>sphinx_port</param-name>
		<param-value>9312</param-value>
	</context-param>

	<context-param>
		<description>Sphinx max matches</description>
		<param-name>sphinx_max_matches</param-name>
		<param-value>1000</param-value>
	</context-param>

	<servlet>
		<servlet-name>SearchPageServlet</servlet-name>
		<servlet-class>gov.alaska.dggs.igneous.SearchPageServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>SearchPageServlet</servlet-name>
		<url-pattern>/search</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>BoreholeViewPageServlet</servlet-name>
		<servlet-class>gov.alaska.dggs.igneous.BoreholeViewPageServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>BoreholeViewPageServlet</servlet-name>
		<url-pattern>/borehole/*</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>SearchServlet</servlet-name>
		<servlet-class>gov.alaska.dggs.igneous.SearchServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>SearchServlet</servlet-name>
		<url-pattern>/search.json</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>BoreholeServlet</servlet-name>
		<servlet-class>gov.alaska.dggs.igneous.BoreholeServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>BoreholeServlet</servlet-name>
		<url-pattern>/borehole.json</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>InventoryServlet</servlet-name>
		<servlet-class>gov.alaska.dggs.igneous.InventoryServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>InventoryServlet</servlet-name>
		<url-pattern>/inventory.json</url-pattern>
	</servlet-mapping>

	<listener>
		<listener-class>gov.alaska.dggs.igneous.IgneousFactory</listener-class>
	</listener>

	<resource-ref>
		<description>Local datasource</description>
		<res-ref-name>jdbc/igneous</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
</web-app>
